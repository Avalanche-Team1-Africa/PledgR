# Production Environment Variables
# Copy this file to .env.production for production builds

# Avalanche Fuji Testnet Configuration
VITE_CHAIN_ID=43113
VITE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# The Graph Subgraph Endpoint
# Replace with your actual subgraph endpoint
VITE_GRAPHQL_ENDPOINT=https://api.studio.thegraph.com/query/YOUR_SUBGRAPH_ID/pledgr/v0.0.1

# Infura RPC Endpoint (Alternative/Backup)
# Replace with your actual Infura project ID
VITE_INFURA_RPC=https://avalanche-fuji.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Contract Addresses (will be set by deployment pipeline)
# VITE_CREATOR_REGISTRY_ADDRESS=0x...
# VITE_STAKING_CONTRACT_ADDRESS=0x...
# VITE_PERKS_CONTRACT_ADDRESS=0x...

# Application Configuration
VITE_APP_NAME=Pledgr
VITE_APP_DESCRIPTION="Decentralized Creator Monetization Platform"
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_TESTNET_WARNING=true

# Social Links
VITE_GITHUB_URL=https://github.com/YOUR_USERNAME/Pledgr
VITE_DISCORD_URL=https://discord.gg/YOUR_DISCORD
VITE_TWITTER_URL=https://twitter.com/YOUR_TWITTER
